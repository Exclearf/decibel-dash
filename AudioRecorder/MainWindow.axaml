    </Window.Resources>

    <Grid RowDefinitions="Auto, *, Auto" Background="#FF2D2D30">

        <!-- Title Bar -->
        <Grid ColumnDefinitions="Auto, Auto, *, Auto, Auto" Height="40" VerticalAlignment="Center">

            <Button Grid.Column="0" Classes="HeaderButton PressableIcon" Margin="4 4 2 4">
                <PathIcon Data="{StaticResource Laptop}" />
            </Button>

            <Button Grid.Column="1" Classes="HeaderButton PressableIcon">
                <PathIcon Data="{StaticResource Block}" />
            </Button>

            <StackPanel Grid.Column="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                <TextBlock Text="Decibel Dash" FontWeight="Bold" />
                <TextBlock Text=" | " />
                <TextBlock Text="Loudness Meter" />

            </StackPanel>

            <Button Grid.Column="3"
                    Classes="HeaderButton 
                    PressableIcon" Margin="4 4 2 4"
                    RenderTransform="scaleX(-1)">
                <PathIcon Data="{StaticResource OpenPage}" />
            </Button>

            <Button Grid.Column="4"
                    Classes="HeaderButton PressableIcon"
                    Margin="4 4 2 4"
                    RenderTransform="scaleX(-1)">
                <PathIcon Data="{StaticResource Settings}" />

            </Button>
        </Grid>

        <!-- Main Area -->
        <Grid Grid.Row="1" Background="#FF252526" ColumnDefinitions="Auto, Auto, *">

            <!-- Volume Bar -->
            <Grid Grid.Column="0"
                  RowDefinitions="*, Auto, Auto"
                  Width="110"
                  Margin="4 8">

                <!-- Volume Metric -->
                <Grid Grid.Row="0"
                      RowDefinitions="3*,3*,3*,9*,5*,4*,9*,9*,9*,6*"
                      ColumnDefinitions="Auto, *, Auto, Auto">

                    <Label Grid.Column="0" Grid.Row="0" Classes="VolumeMetricGrid">0 —</Label>
                    <Label Grid.Column="0" Grid.Row="1" Classes="VolumeMetricGrid">-3 —</Label>
                    <Label Grid.Column="0" Grid.Row="2" Classes="VolumeMetricGrid">-6 —</Label>
                    <Label Grid.Column="0" Grid.Row="3" Classes="VolumeMetricGrid">-9 —</Label>
                    <Label Grid.Column="0" Grid.Row="4" Classes="VolumeMetricGrid">-18 —</Label>
                    <Label Grid.Column="0" Grid.Row="5" Classes="VolumeMetricGrid">-23 —</Label>
                    <Label Grid.Column="0" Grid.Row="6" Classes="VolumeMetricGrid">-27 —</Label>
                    <Label Grid.Column="0" Grid.Row="7" Classes="VolumeMetricGrid">-36 —</Label>
                    <Label Grid.Column="0" Grid.Row="8" Classes="VolumeMetricGrid">-45 —</Label>
                    <Label Grid.Column="0" Grid.Row="9" Classes="VolumeMetricGrid">-54 —</Label>

                    <!-- Volume Bar -->
                    <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="10" RowDefinitions="23*, 37*" Width="20">
                        <Rectangle Grid.Row="0" Fill="#B05C4E" Width="20" Margin="0 6 0  -6" />
                        <Rectangle Grid.Row="1" Fill="White" Width="20" Margin="0 6 0 0" />
                    </Grid>

                    <Label Grid.Column="2" Grid.Row="0" Classes="VolumeMetricGrid VolumeMetricGridNoNumbers">—</Label>
                    <Label Grid.Column="2" Grid.Row="1" Classes="VolumeMetricGrid VolumeMetricGridNoNumbers">—</Label>
                    <Label Grid.Column="2" Grid.Row="2" Classes="VolumeMetricGrid VolumeMetricGridNoNumbers">—</Label>
                    <Label Grid.Column="2" Grid.Row="3" Classes="VolumeMetricGrid VolumeMetricGridNoNumbers">—</Label>
                    <Label Grid.Column="2" Grid.Row="4" Classes="VolumeMetricGrid VolumeMetricGridNoNumbers">—</Label>
                    <Label Grid.Column="2" Grid.Row="5" Classes="VolumeMetricGrid VolumeMetricGridNoNumbers">—</Label>
                    <Label Grid.Column="2" Grid.Row="6" Classes="VolumeMetricGrid VolumeMetricGridNoNumbers">—</Label>
                    <Label Grid.Column="2" Grid.Row="7" Classes="VolumeMetricGrid VolumeMetricGridNoNumbers">—</Label>
                    <Label Grid.Column="2" Grid.Row="8" Classes="VolumeMetricGrid VolumeMetricGridNoNumbers">—</Label>
                    <Label Grid.Column="2" Grid.Row="9" Classes="VolumeMetricGrid VolumeMetricGridNoNumbers">—</Label>

                    <!-- Volume Arrow -->
                    <Canvas Grid.Column="3" Grid.Row="0" Grid.RowSpan="10" Width="20">
                        <Rectangle Fill="White" Width="20" Height="20" Canvas.Top="0" />
                    </Canvas>

                </Grid>

                <!-- LUFS Text -->
                <TextBlock Grid.Row="1" Foreground="White" FontSize="20" HorizontalAlignment="Center" Margin="0 5">LUFS</TextBlock>

                <!-- Volume Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">

                    <Button Classes="HeaderButton VolumeBarButton" Margin="4 0 2 0" Opacity="1">
                        <PathIcon Data="{StaticResource AudioPlay}" />
                    </Button>
                    <Button Classes="VolumeBarButton">INT-LRA</Button>

                </StackPanel>

            </Grid>

            <!-- Info Panel -->
            <Rectangle Grid.Column="1" Width="140" />

            <!-- Graph -->
            <Rectangle Grid.Column="2" />
        </Grid>

        <!-- Bottom Bar -->
        <Grid Grid.Row="2"
              Height="40"
              ColumnDefinitions="Auto, Auto, *, Auto, Auto, Auto, Auto, Auto"
              Margin="8">

            <Button Content="Stereo" Margin="8 0 4 0" />
            <Button Grid.Column="1" Content="YouTube" Margin="4 0" />

            <Button Grid.Column="3" Content="10 SEC" Margin="4 0" />
            <Button Grid.Column="4" Content="Continuous" Margin="4 0" />
            <Rectangle Grid.Column="5" Fill="Lime" Width="40" Margin="4 0"></Rectangle>
            <Rectangle Grid.Column="6" Fill="DarkGreen" Width="40" Margin="4 0 8 0"></Rectangle>

        </Grid>

    </Grid>

</Window>